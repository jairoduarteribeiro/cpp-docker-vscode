{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake -S . -B build -DCMAKE_EXPORT_COMPILE_COMMANDS=ON -D CMAKE_BUILD_TYPE=Debug",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "cmake --build build",
      "group": "build",
      "problemMatcher": [],
      "dependsOn": "CMake Configure"
    },
    {
      "label": "Build Project",
      "dependsOn": "CMake Build",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run Project",
      "type": "shell",
      "command": "./build/bin/MyProject",
      "group": "test",
      "problemMatcher": [],
      "dependsOn": "Build Project"
    },
    {
      "label": "Clean Project",
      "type": "shell",
      "command": "git clean -dfX",
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
